<div id="welcome-info">
<h2>Welcome {{name}}</h2>
<p>You have written {{posts.length}} posts so far</p>
</div>
<div id="post-container">
<button class="btn btn-warning" data-toggle="modal" data-target="#post-modal">New Post</button>
{{#each posts as |post|}}
<div id="post-{{post.id}}" class="card">
    <div class="card-body">
        <h4 class="card-title">{{post.title}}</h4><p>{{format_date post.date_created}}</p> 
        <a id="post-url" href="/post/{{post.id}}" class="btn btn-primary">View Post</a>
        <button class="btn edit btn-secondary">Edit Post</button>
        <button class="btn delete btn-danger">Delete Post</button>
    </div>
</div>
{{/each}}
</div>

<div id="post-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="post-title" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="post-title">New Post</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="post-form">
                    <div class="col-sm-12">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" class="form-control" id="title-text">
                    </div>
                    <div class="col-sm-12">
                        <label for="content" class="form-label">Content</label>
                        <textarea type="textarea" class="form-control" id="post-content"></textarea>
                    </div>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn create btn-warning">Submit Post</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/logout.js"></script>
<script src="/js/dashboard.js"></script>