<div class="welcome">
    <h2>Recent Posts</h2>
</div>

<div id="all-posts">
    {{#each posts as |post|}}
    <div class="card">
        <a href="/post/{{post.id}}">
            <div class="card-body">
                <h4 class="card-title">{{post.title}}</h4>
                <p class="date-partial">on: {{format_date post.date_created}}</p>
            </div>
        </a>
    </div>
    {{/each}}
</div>

<script src="./js/logout.js"></script>