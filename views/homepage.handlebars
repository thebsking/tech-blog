<div class="welcome">
    <h2>Recent Posts</h2>
</div>

<div id="all-posts">
{{#each posts as |post|}}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">{{post.title}}</h4>
        <p class="card-text">{{post.content}}</p>
        <p class="user-partial">written by: {{post.user.username}}</p>
        <p class="date-partial">on: {{format_date post.date_created}}</p>
        <a href="/post/{{post.id}}" class="btn btn-primary">See Full Post</a>
        
    </div>
</div>
{{/each}}
</div>

<script src="./js/logout.js"></script>